@using QuanLyNhanSu.Models
@model List<ChamCongKPI>

@{
    ViewBag.Title = "Chấm công";

}

<div class="">
    <div class="">
        <h1 class="page-header">
            Chấm công
        </h1>
    </div>
</div>

<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("ThemChamCong", "ChamCong")">
        Thêm chấm công
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr>
                <th>Mã nhân viên</th>
                <th>Tên nhân viên</th>
                <th>Chức vụ</th>
                <th>Phòng ban</th>
                <th>Tháng chấm công</th>
                <th>Số lượng việc hoàn thành</th>
                <th>Ghi chú</th>
                <th>Đánh giá (%)</th>
                <th>Số chức vụ: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                        @*<td>@item.MaChucVu</td>*@
                        <td>@item.MaNhanVien</td>
                        <td>@item.NhanVien.HoTen</td>
                        <td>@item.ChucVuNhanVien.TenChucVu</td>
                        <td>@item.PhongBan.TenPhongBan</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", @item.ThangChamCong)</td>
                        <td>@item.SoLuongCVHoanThanh</td>
                        <td>@item.GhiChu</td>
                        <td>@item.DiemSo%</td>
                        <td>
                            <a class="btn btn-warning" href="@Url.Action("suaChamCong", "ChamCong", new {@id = @item.id })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("XoaChamCong", "ChamCong", new { @id = @item.id })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

