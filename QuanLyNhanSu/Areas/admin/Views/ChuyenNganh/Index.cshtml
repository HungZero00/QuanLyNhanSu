@using QuanLyNhanSu.Models
@model List<ChuyenNganh>

@{
    ViewBag.Title = "Chuyên ngành";

}


<div class="">
    <div class="">
        <h1 class="page-header">
            Chuyên ngành
        </h1>
    </div>
</div>

<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("ThemChuyenNganh", "ChuyenNganh")">
        Thêm chuyên ngành
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr >
               
                <th> Tên chuyên ngành</th>
                <th>Số chuyên ngành: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>

                       
                        <td>
                            @item.TenChuyenNganh
                        </td>

                        <td>
                            <a class="btn btn-warning" href="@Url.Action("suaChuyenNganh", "ChuyenNganh", new {@id = @item.MaChuyenNganh })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("XoaChuyenNganh", "ChuyenNganh", new { @id = @item.MaChuyenNganh })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

