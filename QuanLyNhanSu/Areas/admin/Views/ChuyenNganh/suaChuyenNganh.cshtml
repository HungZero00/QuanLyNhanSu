@model QuanLyNhanSu.Models.ChuyenNganhValidation

@{
    ViewBag.Title = "Sửa chuyên ngành";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật chuyên ngành "@Model.TenChuyenNganh"
        </h1>
    </div>
</div>
<div class="">
    <div class=" col-md-6 col-md-offset-3">
        @Html.AntiForgeryToken()
        <form class="form-horizontal" method="post" role="form">

            <div class="form-group hidden">
                <div class="col-sm-4 control-label">
                    <label>Mã chuyên ngành</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="MaChuyenNganh"
                           class="form-control"
                           maxlength="20"
                           value="@Model.MaChuyenNganh"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.MaChuyenNganh)
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Tên chuyên ngành</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="TenChuyenNganh"
                           class="form-control"
                           maxlength="20"
                           value="@Model.TenChuyenNganh.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.TenChuyenNganh)
                    </label>
                    @*@ViewBag.MaNhanVien*@
                </div>
            </div>

          

            <div class="form-group">
                <div class=" col-sm-offset-4 col-sm-5">
                    <input type="submit" value="Lưu thay đổi" class="btn custom-btn" />
                    <a class="btn custom-btn" href="@Url.Action("index", "ChuyenNganh")">Quay về</a>
                </div>
            </div>
        </form>

    </div>
</div>
<div class="clearfix"></div>

