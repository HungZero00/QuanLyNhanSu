@using QuanLyNhanSu.Models
@model List<LuongBac1>

@{
    ViewBag.Title = "Hệ số lương";

}

<div class="">
    <div class="">
        <h1 class="page-header">
            Hệ số lương
        </h1>
    </div>
</div>
<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("ThemHSL", "HeSoLuong")">
        Thêm hệ số lương
    </a>
    <a class="btn custom-btn" href="@Url.Action("index", "QuanLyLuong")">Quay về</a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr >
                <th>ID</th>
                <th>Hệ số Lương</th>
                <th>Số Lượng: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                        @*<td>@item.MaChucVu</td>*@
                        <td>@item.id</td>
                        <td>
                            @item.HeSo
                        </td>

                        <td>
                            <a class="btn btn-warning" href="@Url.Action("SuaHSL", "HeSoLuong", new {@id = @item.id })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("XoaHSL", "HeSoLuong", new { @id = @item.id})"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

