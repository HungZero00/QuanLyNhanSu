@using QuanLyNhanSu.Models
@model List<ChucVuNhanVien>

@{
    ViewBag.Title = "Chức vụ";

}

<div class="">
    <div class="">
        <h1 class="page-header">
            Chức vụ
        </h1>
    </div>
</div>

<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("ThemChucVu", "QuanLyChucVu")">
        Thêm chức vụ
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr >
                <th>Tên chức vụ</th>
                <th>Hệ số phụ cấp</th>
                <th>Số chức vụ: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                        @*<td>@item.MaChucVu</td>*@
                        <td>@item.TenChucVu</td>
                        <td>
                            @item.HSPC
                    </td>

                    <td>
                        <a class="btn btn-warning" href="@Url.Action("suaChucVu", "QuanLyChucVu", new {@id = @item.MaChucVuNV })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                        <a class="btn btn-danger  " href="@Url.Action("XoaChucVu", "QuanLyChucVu", new { @id = @item.MaChucVuNV })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                    </td>
                </tr>

            }

            }

        </tbody>
    </table>
</div>

