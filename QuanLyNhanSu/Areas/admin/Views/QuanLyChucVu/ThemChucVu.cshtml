@using QuanLyNhanSu.Models
@model ChucVuValidation

@{
    ViewBag.Title = "ThemChucVu";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Thêm Chức vụ
        </h1>
    </div>
</div>
<form class="form-horizontal" role="form" method="post">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <!--start-->
        <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
            <label>Mã Chức vụ</label>
        </div>
        <div class="col-md-4 col-sm-8">
            <input type="text" name="MaChucVuNV"
                   class="form-control"
                   id="MaChucVuNV"
                   value="@Model.MaChucVuNV"
                   required />

        </div>
        <div class="col-sm-offset-4 col-sm-5" style="height:15px">
            <label class="control-label text-danger">
                @ViewBag.err
                @Html.ValidationMessageFor(model => model.MaChucVuNV)
            </label>
        </div>
        <!--end-->
    </div>

    <div class="form-group">
        <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
            <label>Tên Chức vụ</label>
        </div>
        <div class="col-md-4 col-sm-8">
            <input type="text" name="TenChucVu"
                   class="form-control"
                   id="TenChucVu"
                   value="@Model.TenChucVu"
                   required />

        </div>
        <div class="col-sm-offset-4 col-sm-5" style="height:15px">
            <label class="control-label text-danger">

                @Html.ValidationMessageFor(n => n.TenChucVu)
            </label>
        </div>

    </div>

    <div class="form-group">
        <!--start-->
        <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
            <label>Hệ số phụ cấp</label>
        </div>
        <div class="col-md-4 col-sm-8">
            <input type="text" name="HSPC"
                   class="form-control"
                   id="HSPC"
                   value="@Model.HSPC"
                   required />

        </div>
        <div class="col-sm-offset-4 col-sm-5" style="height:15px">
            <label class="control-label text-danger">

                @Html.ValidationMessageFor(model => model.HSPC)
            </label>
        </div>
        <!--end-->

    </div>
    <div class="form-group">
        <div class="  col-md-offset-5 col-sm-offset-4 col-sm-5">
            <input type="submit" value="Thêm Chức vụ" class="btn custom-btn" />
            <a class="btn custom-btn" href="@Url.Action("index", "QuanLyChucVu")">Quay về</a>
        </div>
    </div>
</form>


