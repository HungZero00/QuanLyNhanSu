@model QuanLyNhanSu.Models.ChucVuValidation

@{
    ViewBag.Title = "Sửa chức vụ";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật Chức vụ "@Model.TenChucVu"
        </h1>
    </div>
</div>
<div class="">
    <div class=" col-md-6 col-md-offset-3">
        @Html.AntiForgeryToken()
        <form class="form-horizontal" method="post" role="form">

            <div class="form-group hidden">
                <div class="col-sm-4 control-label">
                    <label>Mã Chức vụ</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="MaChucVuNV"
                           class="form-control"
                           maxlength="20"
                           value="@Model.MaChucVuNV"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.MaChucVuNV)
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Tên Chức vụ</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="TenChucVu"
                           class="form-control"
                           maxlength="20"
                           value="@Model.TenChucVu.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.TenChucVu)
                    </label>
                    @*@ViewBag.MaNhanVien*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Hệ số phụ cấp</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="HSPC"
                           class="form-control"
                           maxlength="20"
                           value="@Model.HSPC"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.HSPC)
                    </label>
                    @*@ViewBag.MaNhanVien*@
                </div>
            </div>


            <div class="form-group">
                <div class=" col-sm-offset-4 col-sm-5">
                    <input type="submit" value="Lưu thay đổi" class="btn custom-btn" />
                    <a class="btn custom-btn" href="@Url.Action("index", "QuanLyChucVu")">Quay về</a>
                </div>
            </div>
        </form>

    </div>
</div>
<div class="clearfix"></div>

