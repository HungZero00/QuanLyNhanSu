@using QuanLyNhanSu.Models
@model List<HopDong>

@{
    ViewBag.Title = "Hợp đồng";

}

<div class="">
    <div class="">
        <h1 class="page-header">
            Hợp đồng
        </h1>
    </div>
</div>

<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("index", "QuanLyUser")">
        Quay về
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr>
                <th>Mã hợp đồng</th>
                <th>Loại hợp đồng</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Nội dung</th>
               
                <th>Số chức vụ: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        @*<td>@item.MaChucVu</td>*@
                        <td>@item.MaHopDong</td>
                        <td>@item.LoaiHopDong</td>
                        <td>@item.NgayBatDau</td>
                        <td>@item.NgayKetThuc</td>
                        <td>@item.NoiDung</td>

                        <td>
                            <a class="btn btn-warning" href="@Url.Action("SuaHopDong", "QuanLyUser", new {@id = @item.MaHopDong })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

