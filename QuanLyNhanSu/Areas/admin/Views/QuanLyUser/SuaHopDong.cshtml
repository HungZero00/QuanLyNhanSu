@model QuanLyNhanSu.Models.HopDong

@{
    ViewBag.Title = "Sửa hợp đồng";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật hợp đồng nhân viên
        </h1>
    </div>
</div>
<div class="">
    @*<div class=" col-md-5 col-md-offset-3">*@
    @Html.AntiForgeryToken()
    <form class="form-horizontal" method="post" role="form">

        <div class="form-group hidden">
            <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
                <label>Mã hợp đồng</label>
            </div>
            <div class="col-md-4 col-sm-8">
                <input type="text" name="MaHopDong"
                       class="form-control"
                       maxlength="20"
                       id="MaHopDong"
                       value="@Model.MaHopDong"
                       required />
            </div>
            <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                <label class="control-label text-danger">
                    @Html.ValidationMessageFor(n => n.MaHopDong)
                </label>

            </div>
        </div>
        <div class="form-group">
            <!---start-->
            <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
                <label>Loại hợp đồng</label>
            </div>

            <div class="col-md-4 col-sm-8">
                <input type="text" name="LoaiHopDong"
                       class="form-control"
                       id="LoaiHopDong"
                       list="browsers"
                       value="@Model.LoaiHopDong"
                       required />
            </div>

            <div class=" col-md-offset-5 col-sm-offset-4 col-sm-5" style="height:15px">
                <label class="control-label text-danger">
                    @Html.ValidationMessageFor(n => n.LoaiHopDong)
                </label>
            </div>
            <!---end--->
        </div>

        <div class="form-group">
            <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
                <label>Ngày bắt đầu</label>
            </div>
            <div class="col-md-4 col-sm-8">
                <input type="date" name="NgayBatDau"
                       class="form-control"
                       maxlength="20"
                       id="NgayBatDau"
                       value="@((Model.NgayBatDau != null) ? Model.NgayBatDau.Value.ToString("yyyy-MM-dd") : "")"
                       required />
            </div>

            <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                <label class="control-label text-danger">
                    @Html.ValidationMessageFor(n => n.NgayBatDau)
                </label>
                @*@ViewBag.MaNhanVien*@
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
                <label>Ngày kết thúc</label>
            </div>
            <div class="col-md-4 col-sm-8">
                <input type="date" name="NgayKetThuc"
                       class="form-control"
                       maxlength="20"
                       id="NgayKetThuc"
                       value="@((Model.NgayKetThuc != null) ? Model.NgayKetThuc.Value.ToString("yyyy-MM-dd") : "")"
                       required />
            </div>
            <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                <label class="control-label text-danger">
                    @Html.ValidationMessageFor(n => n.NgayKetThuc)
                </label>
                @*@ViewBag.MaNhanVien*@
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-offset-1 col-md-4 col-sm-4">
                <label for="NoiDung">Nội dung</label>
            </div>

            <div class="col-md-4 col-sm-8">
                <textarea name="NoiDung" id="NoiDung" class="form-control" rows="5">@Model.NoiDung</textarea>
            </div>

            <div class="col-md-offset-5 col-sm-offset-4 col-sm-5" style="height:15px">
                <label class="control-label text-danger">@Html.ValidationMessageFor(n => n.NoiDung)</label>
            </div>
        </div>


        <div class="form-group">
            <div class=" col-sm-offset-4 col-sm-5">
                <input type="submit" value="Lưu thay đổi" class="btn custom-btn" />
                <a class="btn custom-btn" href="@Url.Action("HopDong", "QuanLyUser")">Quay về</a>
            </div>
        </div>
    </form>

</div>
<div class="clearfix"></div>

