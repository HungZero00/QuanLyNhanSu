@using QuanLyNhanSu.Models
@model List<TrinhDoHocVan>

@{
    ViewBag.Title = "Trình độ học vấn";

}

<div class="">
    <div class="">
        <h1 class="page-header">
            Trình độ học vấn
        </h1>
    </div>
</div>

<div style="margin:10px">
    <a class="btn custom-btn" href="@Url.Action("ThemHocVan", "TrinhDoHocVan")">
        Thêm Trình độ học vấn
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr>
                <th>Tên Trình độ học </th>
                <th>Hệ số </th>
                <th>Số Trình độ học vấn: @Model.Count</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                       
                        <td>@item.TenTrinhDo</td>
                        <td>
                            @item.HeSoBac
                        </td>

                        <td>
                            <a class="btn btn-warning" href="@Url.Action("suaHocVan", "TrinhDoHocVan", new {@id = @item.MaTrinhDoHocVan })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("XoaHocVan", "TrinhDoHocVan", new { @id = @item.MaTrinhDoHocVan })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>

